<%= render "shared/header" %>
<div class="row">
  <div class="ml-auto mr-auto">
    <h1> Listagem de Usuários </h1>
  </div>
</div>
<div class="row">
  <div class="col">
    <%= link_to 'Cadastrar usuário', new_user_path, class:'float-right btn btn-primary mb-1'%>
  </div>
</div>
<div class="row">
  <div class="col">
    <table class="table">
      <tr>
        <th class="text-center" scope="col">ID</th>
        <th class="text-center" scope="col">Email</th>
        <th class="text-center" scope="col">Ações</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td class="text-center"><%= user.id %></td>
          <td class="text-center"><%= user.email %></td>
          <td class="d-flex justify-content-center">
            <%= link_to 'Editar', edit_user_path(user.id), class:'btn btn-primary' %>
            <%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Tem certeza que deseja excluir este usuário?' }, class: 'ml-1 btn btn-danger'%>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>